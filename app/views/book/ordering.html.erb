<%= will_paginate @ordering %>
<div class="book container-fluid">
	<table class="table  table-hover">
		<thead>
			<tr>
				<th>封面</th>
				<th>书名</th>
				<th>ISBN</th>
				<th>预定时间</th>
				<th>状态</th>
			</tr>
		</thead>
		<tbody>
			<% @ordering.each do |book| %>
			<tr>
				<td></td>
				<td><%= book[:name] %></td>
				<td><%= book[:isbn] %></td>
				<td><%= book[:created_at] %></td>
				<td><%= book[:status] %>，前方有<%= -book[:store]-1 %>人</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<%= will_paginate @ordering %>