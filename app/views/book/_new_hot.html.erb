<div class="span12">
	<div class="book span12">
		<p>新书推荐</p>
		<div class="row-fluid">
			<ul class="thumbnails">
				<% @books_new.each do |book| %>
				<li class="span2">
					<div class="thumbnail">
						<img class="img-rounded" data-src="" alt="封面">
						<div class="caption">
							<h5><%= book.name %></h5>
							<p><%= book.author %></p>
						</div>
					</div>
				</li>
				<% end %>
			</ul>
		</div>
	</div>
	<div class="row-fluid">
		<div class="book hot span6">
			<p>热门图书</p>
			<div class="row-fluid">
				<% @books_hot.each do |book| %>
				<ul class="thumbnails">
					<li class="span12">
						<div class="thumbnail">
							<img class="img-rounded" data-src="" alt="封面">
							<div class="caption">
								<h6><%= book.name %></h6>
								<p><%= book.author %></p>
							</div>
						</div>
					</li>
				</ul>
				<% end %>
			</div>
		</div>
		<div class="book rec span6">
			<p>最新推荐</p>
			<div class="row-fluid">
				<% @books_rec.each do |book| %>
				<ul class="thumbnails">
					<li class="span12">
						<div class="thumbnail">
							<img class="img-rounded" data-src="" alt="封面">
							<div class="caption">
								<h6><%= book.name %></h6>
								<p><%= book.author %></p>
							</div>
						</div>
					</li>
				</ul>
				<% end %>
			</div>
		</div>
	</div>
</div>