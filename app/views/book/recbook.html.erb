<%= form_for(:book, url: recommend_path, method: 'post') do |f| %>
<div class="modal-header">
	<center>
		<h4>图书信息</h4>
	</center>
</div>
<div class="modal-body">
	<center>
		<div class="input-prepend">
		  <span class="add-on">ISBN:</span>
		  <%= f.text_field :isbn, class: "span2" %>
		  <%= link_to "查询", fetch_path, method:"get", class:"btn btn-info",id:"fetch", onclick: "fetch()",remote: true %>
		</div>
		<div class="input-prepend">
			<%= f.submit "推荐", class: "btn btn-info", disabled: true %>
		</div>
		<br>
		<div class="input-prepend">
		  <span class="add-on">书名:</span>
		  <%= f.text_field :name, class: "span3", disabled: true %>
		</div>
		
		<div class="input-prepend">
		  <span class="add-on">作者:</span>
		  <%= f.text_field :author, class: "span3", disabled: true %>
		</div>
		<br>
		<div class="input-prepend">
		  <span class="add-on">语言:</span>
		  <%= f.text_field :language, class: "span2", disabled: true %>
		</div>
		<div class="input-prepend">
		  <span class="add-on">价格:</span>
		  <%= f.text_field :price, class: "span2", disabled: true %>
		</div>
		<br>
		<div class="input-prepend">
		  <span class="add-on">出版社:</span>
		  <%= f.text_field :press, class: "span3", disabled: true %>
		</div>
		<br>
		<div class="input-prepend">
		  <span class="add-on">出版时间:</span>
		  <%= f.text_field :publish_date, class: "span3", disabled: true %>
		</div>
		<br>
		<div>
		  <span>简介 :</span><br>
		  <%= f.text_area :intro, size: "10x8", class: "span5", disabled: true %>
	  </div>
	</center>
	
</div>
<% end %>

<script>
function fetch(){
	isbn = $("#book_isbn").val();
	$("#fetch").attr('href',$('#fetch').attr('href').split("?")[0]+"?isbn="+isbn);
}
</script>