<div class="container-fluid">
	<div id="info" class="row-fluid">
		<div class="span12">
			<div class="book span12">
				<p>新书推荐</p>
				<div class="row-fluid">
					<ul class="thumbnails">
						<% @books_new.each do |book| %>
						<li class="span2">
							<div class="thumbnail">
								<img class="img-rounded" src="<%= book.picture %>" alt="封面" style="width: 180px; height: 180px;">
							</div>
						</li>
						<% end %>
					</ul>
				</div>
			</div>
			<div class="row-fluid">
				<div class="book hot span6">
					<p>热门图书</p>
					<div class="row-fluid">
						<% @books_hot.each do |book| %>
						<ul class="thumbnails">
							<li class="span12">
								<div class="thumbnail">
									<img class="img-rounded" src="<%= book.picture %>" alt="封面" style="width: 180px; height: 180px;">
								</div>
							</li>
						</ul>
						<% end %>
					</div>
				</div>
				<div class="book rec span6">
					<p>最新推荐</p>
					<div class="row-fluid">
						<% @books_rec.each do |book| %>
						<ul class="thumbnails">
							<li class="span4">
								<div class="thumbnail">
									<img class="img-rounded" src="<%= book.picture %>" alt="封面" style="width: 180px; height: 180px;">
								</div>
							</li>
						</ul>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>