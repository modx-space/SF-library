<div id="bookinfor" role="dialog" aria-hidden="true">
	<%= form_for @book do |f| %>
	<%= render partial: 'helper/error_bar', locals: {object: @book} %>
	<div class="modal-body">
		<center>
			<div class="input-prepend">
			  <span class="add-on">书名:</span>
			  <%= f.text_field :name, class: "span6" %>
			</div>
			<div class="input-prepend">
			  <span class="add-on">ISBN:</span>
			  <%= f.text_field :isbn, class: "span3" %>
			</div>
			<div class="input-prepend">
			  <span class="add-on">总数:</span>
			  <%= f.number_field :total, min: 0, step: 1, class: "span3" %>
			</div>
			<div class="input-prepend">
			  <span class="add-on">作者:</span>
			  <%= f.text_field :author, class: "span3" %>
			</div>
			<div class="input-prepend">
			  <span class="add-on">语言:</span>
			  <%= f.select :language, Book.language.options, class: "span3" %>
			</div>
			<div class="input-prepend">
			  <span class="add-on">出版社:</span>
			  <%= f.text_field :press, class: "span3" %>
			</div>
			<div class="input-prepend">
			  <span class="add-on">类型:</span>
			  <%= f.select :category, Book.category.options, class: "span3" %>
			</div>
			<div class="input-prepend">
			  <span class="add-on">出版日期:</span>
			  <%= f.date_field :publish_date, class: "span3" %>
			</div>
			<div class="input-prepend">
			  <span class="add-on">价格:</span>
			  <%= f.number_field :price, class: "span3" %>
			</div>
			<div class="input-prepend">
			  <span class="add-on">捐赠者:</span>
			  <%= f.text_field :provider, class: "span3" %>
			</div>
			<div class="input-prepend">
			  <span class="add-on">封面URL:</span>
			  <%= f.url_field :picture, class: "span6" %>
			</div>
			<div>
			  <span>简介 :</span><br>
			  <%= f.text_area :intro, id: "intro", rows: 5, class: "span8" %>
		  </div>
		</center>
	</div>
	<div class="modal-footer">
		<%= f.submit "提交修改", class: "btn btn-primary" %>
	</div>
	<% end %>
</div>