# encoding: utf-8
$("#book_name").val("<%= @book[:name] %>");
$("#book_author").val("<%= @book[:author] %>");
$("#book_language").val("<%= @book[:language] %>");
$("#book_price").val("<%= @book[:price] %>");
$("#book_cate").val("<%= @book[:cate] %>");
$("#book_press").val("<%= @book[:press] %>");
$("#book_publish_date").val("<%= @book[:publish_date] %>");
$("#book_intro").val("<%= @book[:intro] %>");
$("#book_picture").val("<%= @book[:picture] %>");
var empty = <%= @book[:name].nil? %>
if(!empty){
	$("#img").attr("src","<%= @book[:picture]%>");
	$("#img").show();
	$("#rec").attr("disabled",false);
}else{
	$("#img").hide();
	$("#rec").attr("disabled",true);
}
