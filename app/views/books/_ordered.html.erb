# encoding: utf-8
<%= will_paginate @ordered %>
<div class="book container-fluid">
	<table class="table  table-hover">
		<caption>预订历史</caption>
		<thead>
			<tr>
				<th>封面</th>
				<th>书名</th>
				<th>ISBN</th>
				<th>预定时间</th>
				<th>获得时间</th>
			</tr>
		</thead>
		<tbody>
			<% @ordered.each do |book| %>
			<tr>
				<td><img class="img-rounded" src="<%= book.picture %>" alt="封面" style="width: 40px; height: 50px;"></td>
				<td><%= book[:name] %></td>
				<td><%= book[:isbn] %></td>
				<td><%= book[:created_at] %></td>
				<td><%= book[:updated_at] %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<%= will_paginate @ordered %>
