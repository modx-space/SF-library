# encoding: utf-8
<%= will_paginate @borrowing %>
<% is_admin_page = params[:action] == 'admin_history' %>
<div class="book container-fluid">
  <table class="table  table-hover">
    <caption>借阅历史</caption>
    <thead>
      <tr>
        <th>封面</th>
        <th>书名</th>
        <th>ISBN</th>
        <th>借书日期</th>
        <th>应还日期</th>
        <th>归还日期</th>
        <th>超期归还</th>
        <% if is_admin_page %>
          <th>用户</th>
          <th>用户邮箱</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @borrows.each do |borrow| %>
      <tr>
        <% book = borrow.book %> 
        <td><img class="img-rounded" src="<%= book.picture %>" alt="封面" style="width: 40px; height: 50px;"></td>
        <td><%= book[:name] %></td>
        <td><%= book[:isbn] %></td>
        <td><%= borrow[:created_at].to_formatted_s(:Y_m_D) %></td>
        <td><%= borrow[:should_return_date].to_formatted_s(:Y_m_D) %></td>
        <td><%= borrow[:return_date].to_formatted_s(:Y_m_D) %></td>
        <td><%=  borrow[:should_return_date] <= borrow[:return_date] ? "是" : "否" %></td>
        <% if is_admin_page %>
          <% user = borrow.user %> 
          <td><%= user.name %></td>
          <td><%= user.email %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate @borrows %>
