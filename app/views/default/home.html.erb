<div class="hero-unit">
	<p>新书推荐</p>
	<div class="row-fluid">
		<ul class="thumbnails">
			<% @books_new.each do |book| %>
			<li class="span2">
				<div class="thumbnail">
					<img class="img-rounded" src="<%= book.picture %>" style="width: 160px; height: 160px;"alt="封面">
				</div>
			</li>
			<% end %>
		</ul>
	</div>
</div>

