<!-- Main hero unit for a primary marketing message or call to action -->
<div class="hero-unit">
	<p>新书推荐</p>
	<div class="row">
		<ul class="thumbnails">
			<% @books_new.each do |book| %>
			<li class="span2">
				<div class="thumbnail">
					<img class="img-rounded img_cursor" src="<%= book.picture %>" style="width: 160px; height: 160px;" alt="封面"
						onclick="show_book_info('<%= book_path(book.id) %>')">
				</div>
			</li>
			<% end %>
		</ul>
	</div>
</div>

