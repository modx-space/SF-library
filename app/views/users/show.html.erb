# encoding: utf-8
<div role="dialog" aria-hidden="true">
  <div class="row-fluid">
      <div class="label-container">
          <label class="general mark">姓名:</label>
          <label class="general"><%= @user.name %></label>
        </div>
      <div class="label-container">
          <label class="general mark">邮箱:</label>
          <label class="general"><%= @user.email %></label>
      </div>
      <div class="label-container">
          <label class="general mark">I/C Num:</label>
          <label class="general"><%= @user.i_number %></label>
      </div>
      <div class="label-container">
          <label class="general mark">权限:</label>
          <label class="general"><%= @user.role.text %></label>
      </div>
      <div class="label-container">
          <label class="general mark">团队:</label>
          <label class="general"><%= @user.team %></label>
      </div>
      <div class="label-container">
          <label class="general mark">SF邮箱:</label>
          <label class="general"><%= @user.sf_email %></label>
      </div>
      <div class="row-fluid">
        <div class="label-container" >
          <div class="span4 ">
            <label class="general mark">PVG:</label>
            <label class="general"><%= @user.building %></label>
          </div>
          <div class="span4">
            <label class="general mark">办公室:</label>
            <label class="general"><%= @user.office %></label>
          </div>
          <div class="span4">
            <label class="general mark">座位编号:</label>
            <label class="general"><%= @user.seat %></label>
          </div>
        </div>
      </div>
  </div>
  <br/>
  <div class="modal-footer">
    <% if @admin_page%>
      <%= link_to "重置密码", reset_passwd_user_path(@user.id), method: "get", class: "btn btn-danger left_align"%>
      <% if @user.active? %>
        <%= link_to "离职", inactivate_user_path(@user.id), method: "get", class: "btn btn-warning left_align"%>
      <% else%>
        <%= link_to "激活", activate_user_path(@user.id), method: "get", class: "btn btn-success left_align"%>
      <% end%>
    <% else%>
      <%= link_to "修改密码", edit_passwd_user_path(@user.id), method: "get", class: "btn btn-danger left_align"%>
    <% end%>
    
    <%= link_to "编辑", edit_user_path(@user.id), class: "btn btn-info" %>
  </div>
</div>