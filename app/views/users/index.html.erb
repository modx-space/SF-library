# encoding: utf-8
<div class="row-fluid">
	<% search_path = admin_users_path %>
	<%= render partial: 'helper/search_box', locals: { path: search_path}%>
	<div class="span3 offset2">
			<button onclick="add_user('<%= new_user_path %>')" class="btn  btn-info">添加用户</button>
	</div>
</div>	
<%= will_paginate @users %>
<div class="user container-fluid">
	<table class="table table-hover">
		<caption>用户列表</caption>
		<thead>
			<tr>
				<th>姓名</th>
				<th>团队</th>
				<th>邮箱</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<tr style="cursor: pointer;">
				<td onclick="show_user('<%= user_path(user.id)%>')"><%= user.name %></td>
				<td onclick="show_user('<%= user_path(user.id)%>')"><%= user.team %></td>
				<td onclick="show_user('<%= user_path(user.id)%>')"><%= user.email %></td>

				<td><%= link_to "离职", user_path(user.id), method: "delete", class: "btn btn-danger", data: { confirm: '真的确定吗?'}%></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<%= will_paginate @users %>
